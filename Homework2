giris = int(input("kişi miktarı :"))
kisilistesi = []

for i in range(0,giris):
    isim = input("İsminiz nedir? ")
    soyad = input("Soyadınız nedir? ")
    yasiniz = int(input("Yaşınız nedir? "))
    dtarihi = int(input("Dogum Tarihiniz nedir? "))

    kisilistesi.append(isim)
    kisilistesi.append(soyad)
    kisilistesi.append(yasiniz)
    kisilistesi.append(dtarihi)

print("Girişi Yapılan Liste : ")
print(kisilistesi)


son_kayit=len(kisilistesi)
liste2 = kisilistesi
son_kayit=len(liste2)

